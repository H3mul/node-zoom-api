  "compilerOptions": {
    "lib": ["ES2020"],
    "target": "ES2020",
    "module": "nodenext",
    "outDir": "dist",
    "noPropertyAccessFromIndexSignature": false,
		"isolatedModules": true,
    "resolveJsonModule": true,
